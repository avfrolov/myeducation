<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:vs="http://rules.jaxb.circuit.processor.core.taskexecuter.myeducation.org/"
           xmlns:cs="http://scheme.jaxb.circuit.processor.core.taskexecuter.myeducation.org/"
           xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
           jxb:extensionBindingPrefixes="xjc"
           jxb:version="2.0"
           version="1.0"
           targetNamespace="http://rules.jaxb.circuit.processor.core.taskexecuter.myeducation.org/"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <xs:annotation>
        <xs:documentation>Schema of the XML document, which describe rules for validation of circuit scheme
        </xs:documentation>
    </xs:annotation>

    <xs:import schemaLocation="../circuit/circuit.xsd"
               namespace="http://scheme.jaxb.circuit.processor.core.taskexecuter.myeducation.org/"/>

    <!--<xs:import schemaLocation="../circuit/circuit.xsd"/>-->

    <xs:element name="rules" type="vs:Rules">
        <xs:annotation>
            <xs:documentation>
                Root element of the XML document that is used as an incoming document to control the processor.
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:complexType name="Rules">
        <xs:sequence minOccurs="1" maxOccurs="unbounded">
            <xs:element name="rule" type="vs:Rule" minOccurs="1" maxOccurs="unbounded" nillable="false"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Rule">
        <xs:sequence>
            <xs:element minOccurs="1" maxOccurs="1" name="subtype" type="vs:ExistSubType"/>
            <xs:element minOccurs="1" maxOccurs="1" name="data" type="vs:Data"/>
        </xs:sequence>
        <xs:attribute name="type" type="vs:RuleType" use="required"/>
    </xs:complexType>

    <xs:complexType name="Data">
        <xs:sequence>
            <xs:element minOccurs="1" maxOccurs="1" name="element" type="cs:ElementType"/>
            <xs:element minOccurs="1" maxOccurs="1" name="value" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="RuleType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="EXIST"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="ExistSubType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="NAME"/>
            <xs:enumeration value="COUNT"/>
            <xs:enumeration value="VALUE"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
